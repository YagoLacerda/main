<div>	
	<form name="bodybuilder">
		<label for="peso">Peso</label>
    	<input type="number" id="peso" name="peso" placeholder="Seu peso.."><br><br>
    	<label for="peso">Idade</label>
    	<input type="number" id="idade" name="idade" placeholder="Sua idade.."><br><br>
    	<label for="peso">Sexo</label>
    	<select id="sex" onclick="atualizar()" >
    	<option value="masc">Masculino</option>
    	<option value="fem">Feminino</option></select><br><br>
    	<label for="pDobra" id="001">Peitoral</label>
    	<input type="number" id="pDobra" name="pDobra" placeholder="Tamanho do Peitoral.."><br><br>
    	<label for="sDobra" id="002">Abdominal</label>
    	<input type="number" id="sDobra" name="sDobra" placeholder="Tamanho do Abdominal.."><br><br>
    	<label for="tDobra" id="003">Coxa</label>
    	<input type="number" id="tDobra" name="tDobra" placeholder="Tamanho da Coxa.."><br><br>    	
	</form>
	<br><br>
	<center><button onclick="calculoComp()">Calcular</button></center>
	<br><br>
	<form name="resultados">
		<br>
		<label>Percentual de Gordura (%)</label>
		<p id="pGordura"></p><br>
		<label>Gordura Absoluta (kg)</label>
		<p id="gAbsoluta"></p><br>
		<label>Massa Magra Absoluta (kg)</label>
		<p id="mMagra"></p><br>
		<label>Massa Corporal Ideal (kg)</label>
		<p id="mCorporalI"></p><br>
		<label>Massa Corporal em Excesso (kg)</label>
		<p id="mCorporalE"></p><br>
	</form></div>
	<button style="position: absolute;bottom: 0px;" onclick="iframe()">Embed</button>
